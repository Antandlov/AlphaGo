# AlphaGo Environment Variables
# Copy this file to .env for local development

# ==========================================
# API Configuration
# ==========================================

# Base API URL (if you add a backend in the future)
# EXPO_PUBLIC_API_URL=https://api.yourdomain.com

# AI/ML Service API Key (if needed for custom AI endpoints)
# EXPO_PUBLIC_AI_API_KEY=your_api_key_here

# ==========================================
# Feature Flags
# ==========================================

# Enable/disable ingredient database caching
EXPO_PUBLIC_ENABLE_INGREDIENT_DATABASE=true

# Enable/disable product database
EXPO_PUBLIC_ENABLE_PRODUCT_DATABASE=false

# ==========================================
# Analytics & Monitoring (Optional)
# ==========================================

# Enable analytics collection
EXPO_PUBLIC_ANALYTICS_ENABLED=false

# Sentry DSN for error tracking
# EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Firebase configuration (if using Firebase)
# EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
# EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
# EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id

# ==========================================
# Development Settings
# ==========================================

# Enable debug logging
EXPO_PUBLIC_DEBUG_MODE=false

# Enable mock data for testing
EXPO_PUBLIC_USE_MOCK_DATA=false

# ==========================================
# Privacy & Compliance
# ==========================================

# Anonymize location data
EXPO_PUBLIC_ANONYMIZE_LOCATION=true

# Data retention period (in days)
EXPO_PUBLIC_DATA_RETENTION_DAYS=365

# ==========================================
# Notes:
# ==========================================
# - Variables prefixed with EXPO_PUBLIC_ are accessible in the app
# - Never commit .env files with real keys to version control
# - Use different .env files for development/staging/production
# - Restart the dev server after changing environment variables
